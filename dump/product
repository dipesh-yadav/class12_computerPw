<?php
session_start();

// Product details
$product = [
    "name" => "ARDUINO UNO R3",
    "seller" => "Arduino Hub Sellers Pvt. Ltd.",
    "price" => 1000.99,
    "rating" => 4,
    "colors" => ["Blue", "Black", "Green"],
    "description" => "The Arduino Uno R3 is a microcontroller board based on the ATmega328P. It has 14 digital input/output pins, 6 analog inputs, a 16 MHz quartz crystal, a USB connection, a power jack, and a reset button.",
    "image" => "images/Uno R3.jpg", // Ensure this image exists in the correct path
];

// Handle add to cart action
if (isset($_POST['add_to_cart'])) {
    $_SESSION['cart'][] = $product;
    $message = "Product added to cart!";
}

// Handle buy now action
if (isset($_POST['buy_now'])) {
    header("Location: checkout.php"); // Redirect to a checkout page
    exit();
}
?>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><?php echo $product["name"]; ?></title>
    <style>
        body { font-family: Arial, sans-serif; background-color: #f5f5f5; margin: 0; padding: 0; }
        .container { width: 70%; margin: 50px auto; padding: 20px; background: white; display: flex; box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1); transition: transform 0.3s ease-in-out; }
        .product-img { width: 50%; padding: 20px; cursor: pointer; }
        .product-img img { width: 100%; border-radius: 10px; }
        .product-details { width: 50%; padding: 20px; }
        .rating { color: gold; }
        .buttons { margin-top: 20px; }
        button { padding: 10px 20px; margin: 5px; cursor: pointer; border: none; }
        .add-to-cart { background: #ff9900; color: white; }
        .buy-now { background: #ff6600; color: white; }
        .color-options { margin-top: 10px; }
        .color-box { width: 20px; height: 20px; display: inline-block; margin-right: 5px; border: 1px solid #ccc; cursor: pointer; }
        
        /* Zoom out effect */
        .zoomed-out { transform: scale(0.8); }
    </style>
    <script>
        function zoomOut() {
            document.querySelector(".container").classList.toggle("zoomed-out");
        }
    </script>
</head>
<body>
    <div class="container" id="productContainer">
        <div class="product-img" onclick="zoomOut()">
            <img src="<?php echo $product["image"]; ?>" alt="Product Image">
        </div>
        <div class="product-details">
            <h2><?php echo $product["name"]; ?></h2>
            <p><strong>Seller:</strong> <?php echo $product["seller"]; ?></p>
            <p><strong>Price:</strong> Rs. <?php echo number_format($product["price"], 2); ?></p>
            <p><strong>Rating:</strong> <span class="rating">&#9733;&#9733;&#9733;&#9733;&#9734;</span></p>
            <p><strong>Description:</strong> <?php echo $product["description"]; ?></p>
            
            <p><strong>Available Colors:</strong></p>
            <div class="color-options">
                <?php foreach ($product["colors"] as $color) {
                    echo "<span class='color-box' style='background: $color;'></span>";
                } ?>
            </div>
            
            <form method="post" class="buttons">
                <button type="submit" name="add_to_cart" class="add-to-cart">Add to Cart</button>
                <button type="submit" name="buy_now" class="buy-now">Buy Now</button>
            </form>
            
            <?php if (!empty($message)) { echo "<p style='color: green;'>$message</p>"; } ?>
        </div>
    </div>
</body>
</html>
